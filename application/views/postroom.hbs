<form action="/post/createPost" method="POST" enctype="multipart/form-data" id="post_form" class="container w-screen md:w-2/3 lg:w-1/2 xl:w-2/5">
  <div class="form-validation">
    <label for="title">Title:</label>
      <input
        type="text"
        name="title"
        id="title"
        class="title hover_card"
        placeholder="Enter an title."
        required
      />
      <label for="address">Address:</label>
      <input
        type="text"
        name="address"
        id="address"
        class="address hover_card"
        placeholder="Enter an address."
        required
      />
      <label for="rent">Rent:</label>
      <input
        type="text"
        name="rent"
        id="rent"
        class="rent hover_card"
        placeholder="Enter an rent."
        required
      />

      <div class="privacy_container my-4">
        <input
            type="checkbox"
            name="privacy"
            id="privacy"
            class="privacy hover_input"
            placeholder="Enter an privacy."
          />
        <label for="privacy">Privacy (Shared or Private)</label>
      </div>

      <div class="description_container my-4">
        <label for="description">Description:</label>
        <textarea
          type="text"
          name="description"
          id="description"
          class="description hover_card"
          placeholder="Enter an description."
          cols="33"
          rows="3"
          required
        ></textarea>
      </div>

      <label for="avatar">Choose a picture:</label>
      <input
        type="file"
        name="fileUpload"
        id="fileUpload"
        value="fileUpload"
        class="card p-5"
        required
      />
  </div>
  <button type="submit" id="submit" class="hover_card">Submit</button>
</form>